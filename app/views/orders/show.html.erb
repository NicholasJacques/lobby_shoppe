<div class="order-header">
  <h1>Order #<%= @order.id %> on <%=@order.format_created_date%>. </h1>
  <h3 class="order-status">Status: <%= @order.status.capitalize %></h3>
</div>

<div class="container all-stations">

  <div class="panel">
    <div class="panel-heading order-panel"><b>Order Items</b></div>
    <table class="table table-striped table-hover table-condensed">
      <tr>
        <th><div id="station-name-header">Politician</div></th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
      </tr>

      <% @order.scumbag_orders.each do |scumbag_order| %>
        <tr>
          <td class="order-scumbag-name"><div class="station-name"><%= link_to "#{scumbag_order.scumbag.name} #{scumbag_order.scumbag.party_abbreviation}", scumbag_path(scumbag_order.scumbag) %></div></td>
          <td class="order-scumbag-price">$<%= scumbag_order.scumbag_price %></td>
          <td class="order-scumbag-quantity"><%= scumbag_order.scumbag_quantity %></td>
          <td class="order-scumbag-subtotal">$<%= scumbag_order.subtotal %></td>
        </tr>
      <% end%>
        <tr>
          <td><div class="total">Total:</div></td>
          <td></td>
          <td></td>
          <td class="order-scumbag-total">$<%= @order.total_price %>
        </tr>
    </table>
  </div>
</div>
