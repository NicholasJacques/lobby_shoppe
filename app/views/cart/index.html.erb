<div class="jumbotron">
    <div class="container scumbag-cart-item">
      <div class="row">
        <div class="col-xs-2">
          <h3>Scumbag</h3>
        </div>
        <div class="col-xs-2">
            <h3>Price</h3>
        </div>

        <div class="col-xs-2">
            <h3>Quantity</h3>
        </div>

        <div class="col-xs-2">
            <h3>Sub Total</h3>
        </div>

      </div>

  <div class="line-separator"></div>
  <% @cart_items.each do |cart_item| %>


    <div class="row">

      <div class="col-xs-2">
        <%= "#{cart_item.scumbag.name} #{cart_item.scumbag.party_abbreviation}" %><br>
        <%= "#{cart_item.scumbag.branch.name}"%>
        <%= image_path(cart_item.scumbag.image_path) %>
      </div>

      <div class="col-xs-2">
          <%= "$#{cart_item.scumbag.price}" %>
      </div>

      <div class="col-xs-2">
        <%= form_for(:qty_update, url: cart_path(cart_item.scumbag.id), method: :put) do |f| %>
          <!-- <%#=  f.number_field :quantity, value: cart_item.quantity, min: 1 %> -->
          <%= f.hidden_field :scumbag_id, value: cart_item.scumbag.id %>
          <%= f.select :quantity, (1..20), {:selected => cart_item.quantity}, {:onChange => 'this.form.submit();' }%>
        <% end %>
      </div>

      <div class="col-xs-2">
          <%= "$#{cart_item.subtotal}" %>
      </div>


      <div class="col-xs-2">
          <%=button_to "Remove", cart_path(cart_item.scumbag.id), class:"btn-xs btn-danger", method: :delete%>
      </div>

    </div>
  <%end %>
    <div class="line-separator"></div>
    <h3>Total: $<%=@cart.items_total %> </h3>
  </div>
</div>
