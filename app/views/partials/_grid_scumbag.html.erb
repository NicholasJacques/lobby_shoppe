<div class="col-xs-18 col-sm-4 col-md-3">
	<div class="productbox">
		<div class="imgthumb img-responsive">
      <% if scumbag.avatar_file_size %>
        <%= image_tag scumbag.avatar.url, class:"index-img"%>
      <% else%>
      <img src="<%= scumbag.image_path %>", id:"#{scumbag.id}_scumbag", class:"index-img">
      <%end%>
        <div class="middle">
          <div class="detail-button"><%= button_to "View", scumbag_path(scumbag), method: :get, class: "btn btn-success btn-md btn-block" %></div>
        </div>
		</div>
		<div class="caption">
			<h5><%= scumbag.name %> <%= scumbag.party_abbreviation %><span class="pull-right"><%= scumbag.branch.name %></span></h5>
      <b class="finalprice">$<%= scumbag.price %></b>
      <% if scumbag.retired? %>
        <p><%= button_to "Scumbag Retired", cart_index_path(scumbag_id: scumbag.id), class: "btn btn-success btn-md btn-block retired-btn", disabled: true %></p>
      <%else%>
        <p><%= button_to "Add to Cart", cart_index_path(scumbag_id: scumbag.id), class: "btn btn-success btn-md btn-block" %></p>
      <%end%>
    </div>
	</div>
</div>
